{
  "name": "cdm.objectmodel",
  "version": "1.0.0",
  "description": "The typescript object model for CDM.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./copy-resources.ps1",
    "test": "jest",
    "test-ci": "jest --ci --reporters=jest-junit --coverage --coverageReporters=cobertura"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.6",
    "@types/jest": "^24.0.3",
    "@types/node": "^10.14.12",
    "babelify": "^10.0.0",
    "jest": "25.1.0",
    "jest-junit": "^6.4.0",
    "ts-jest": "23.10.5",
    "ts-stopwatch": "0.0.4",
    "tslint": "^5.12.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "typescript": "^3.1.3"
  },
  "author": "Microsoft Corporation",
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/__test__/**/*.test.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts}",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "adal-node": "^0.1.28",
    "guid-typescript": "^1.0.9"
  }
}
